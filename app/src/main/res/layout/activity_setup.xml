<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setupActivity"
    android:background="@color/colorPrimaryDark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/user"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/setup_username"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_profile_image"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/at"
        android:hint="  Username"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/setup_fullname"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_username"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/username"
        android:hint="  Full Name"
        android:inputType="textPersonName"
        android:padding="14dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/setup_country"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_fullname"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/country"
        android:hint="  Country"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <Button
        android:id="@+id/setup_save_btn"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_country"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/button"
        android:padding="14dp"
        android:text="Save"
        android:textColor="@color/colorLight"
        android:textSize="24sp" />
</RelativeLayout>