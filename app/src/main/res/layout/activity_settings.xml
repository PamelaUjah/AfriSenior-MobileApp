<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="53dp"
        android:id="@+id/settings_toolbar"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/user"/>
            
            <EditText
                android:id="@+id/setting_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_profile_image"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:hint="Profile Status"
                android:padding="20dp"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setting_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_status"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/input"
                android:hint="User Name"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setting_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_username"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input"
                android:hint="Profile Full Name"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/setting_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_profile_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input"
                android:hint="Country"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
            android:id="@+id/setting_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_country"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/input"
            android:hint="Date Of Birth"
            android:padding="12dp"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp"
            android:textStyle="bold"/>

            <EditText
                android:id="@+id/setting_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_dob"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input"
                android:hint="Gender"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/update_account_settings_btn"
                android:layout_below="@id/setting_gender"
                android:background="@drawable/button"
                android:text="Update Account Settings"
                android:textStyle="bold"
                android:textColor="@color/colorLight"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:textSize="24sp"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>